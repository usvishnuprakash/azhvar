	$(document).ready(function () {
		$('form').submit(function (event) {
			event.preventDefault()
			var form_data = $(this).serialize()
			$.ajax({
				method: 'post',
				url: '/u/login',
				data: form_data,
				datatype: 'json', encode: true,
				success: (response) => {
					if (response.status) {
						location.href = '/u'
					} else {
