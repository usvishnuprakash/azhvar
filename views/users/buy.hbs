            <input type="number" class="form-control" id="IMEI_NO" name="IMEI_NO" required="required" 
                 title="please check your imei whether correct or not ">

        </div>
        <div class="form-group">
            <label for="pwd">Confirm IMEI NO:</label>
            <input name="confirm_IMEI_NO" type="number" class="form-control" id="confirm_IMEI" required="required"
                title="please check your imei whether correct or not " >

        </div>

        <button class="btn btn-success mx-auto mt-3 form-group form-control ">add product</button>

    </div>
</form>

<script>

    confirm_IMEI.onkeyup = function confirm_IMEI() {
        var IMEI1 = document.getElementById("IMEI_NO")
        var IMEI2 = document.getElementById("confirm_IMEI")
        if (IMEI1.value === IMEI2.value) {
            IMEI2.setCustomValidity('')
        } else {
            IMEI2.setCustomValidity("CHECK AND TWO IMEI SHOULD BE SAME")
        }
    }
    IMEI_NO.onchange=function IMEI_NO(){
        var IMEI=document.getElementById("IMEI_NO")
        if(IMEI.value.length<15){
            IMEI.setCustomValidity("your IMEI_NO isn't vaild must have minimum 15 charactor")
        }else if(IMEI.value.length>17){
            IMEI.setCustomValidity("your IMEI_NO isn't vaild IMEI only have maximum 17 charactor")
        }else{
            IMEI.setCustomValidity('')
        }
    }
</script>